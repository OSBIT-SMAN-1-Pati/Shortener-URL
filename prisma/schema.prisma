// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
  id String @id @default(cuid())
  name String
  email String @unique
  password String
  sessionToken String
  sessionExpired DateTime @default(now())
  url Url[]
}
model Url {
  id String @id @default(cuid())
  longURL String 
  shortURL String @unique
  userId String  
  user User @relation(fields: [userId],references: [id]) 
}
